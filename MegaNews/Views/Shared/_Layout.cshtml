
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Trang Đọc Báo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <header class="bg-light">
        <div class="container-fluid d-flex justify-content-between align-items-center py-3">
            <!-- Logo -->
            <a href="/" class="navbar-brand">
                <img src="~/image/logo.png" alt="Logo" height="40">
            </a>

            @* <!-- Menu ngang -->
            <nav class="navbar navbar-expand-md">
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/TheLoai/ThoiSu">Thời Sự</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/TheLoai/TheThao">Thể Thao</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/TheLoai/GiaiTri">Giải Trí</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/TheLoai/KinhTe">Kinh Tế</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/TheLoai/PhapLuat">Pháp Luật</a>
                        </li>
                    </ul>
                </div>
            </nav> *@

            <!-- Menu ngang -->
            <nav class="navbar navbar-expand-md">
                <!-- Nút toggle khi thu nhỏ -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/TheLoai/ThoiSu">Thời Sự</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/TheLoai/TheThao">Thể Thao</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/TheLoai/GiaiTri">Giải Trí</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/TheLoai/KinhTe">Kinh Tế</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/TheLoai/PhapLuat">Pháp Luật</a>
                        </li>
                    </ul>
                </div>
            </nav>



            <!-- Thanh tìm kiếm và nút quản lý user -->
            <div class="d-flex align-items-center">
                <!-- Tìm kiếm -->
                <form class="d-flex me-3">
                    <input class="form-control me-2" type="search" placeholder="Tìm kiếm" aria-label="Tìm kiếm">
                    <button class="btn btn-outline-success" type="submit">Tìm</button>
                </form>

                <!-- Quản lý user -->
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="~/image/user.png" alt="User Icon" style="height: 20px; width: 20px;" class="me-1">
                        @User.Identity.Name
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="/BaiViet/Create">Đăng Bài Báo</a></li>
                        <li><a class="dropdown-item" href="/Account/Logout">Đăng Xuất</a></li>
                    </ul>
                </div>
            </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-4">
        <p>&copy; 2024 - Trang Đọc Báo - Mọi quyền được bảo lưu.</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js//bootstrap.bundle.min.js"></script>
</body>
</html>
