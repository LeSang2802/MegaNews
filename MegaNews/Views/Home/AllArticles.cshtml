@model IEnumerable<MegaNews.Models.ArticleModel>
@{
    Layout = "_Layout";
}

<h2>Tất Cả Bài Viết</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tiêu đề</th>
            <th>Nội dung</th>
            <th>Tóm tắt</th>
            <th>Danh mục</th>
            <th>Tác giả</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.Content</td>
                <td>@article.Summary</td>
                <td>@article.Category</td>
                <td>@article.Author</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@article.Id" class="btn btn-warning">Sửa</a>
                    <form asp-action="Delete" asp-route-id="@article.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa bài viết này không?');">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
